<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    app:layout_anchorGravity="center"
    android:layout_gravity="center"
    android:background="@color/background"
    android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:background="@android:color/transparent"
            android:id="@+id/clLoading"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="wrap_content">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    app:layout_constraintWidth_percent="0.9"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintWidth_percent="0.09"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/vTopText1"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:textSize="20sp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvText1"
                    android:textColor="@color/white"
                    app:layout_constraintWidth_percent="0.87"
                    android:textAlignment="center"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:padding="5dp"
                    app:layout_constraintTop_toBottomOf="@+id/vTopText1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="@string/cleanCache"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintWidth_percent="0.09"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvText1"
                    android:id="@+id/vTopBlockScreen1"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:textSize="20sp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvCache"
                    android:padding="5dp"
                    android:textColor="@color/white"
                    app:layout_constraintWidth_percent="0.87"
                    android:textAlignment="center"
                    app:layout_constraintTop_toBottomOf="@+id/vTopBlockScreen1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintWidth_percent="0.09"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvCache"
                    android:id="@+id/vTopEveryWhere1"
                    />
                <com.google.android.material.button.MaterialButton
                    android:layout_width="0dp"
                    android:padding="5dp"
                    android:layout_height="0dp"
                    android:id="@+id/mbtnCancel"
                    app:layout_constraintWidth_percent="0.3"
                    app:layout_constraintDimensionRatio="1:0.5"
                    app:layout_constraintTop_toBottomOf="@+id/vTopEveryWhere1"
                    app:layout_constraintEnd_toStartOf="@+id/glCancel"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/white"
                    android:text="@string/cancel"
                    />
                <androidx.constraintlayout.widget.Guideline
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.45"
                    android:id="@+id/glCancel"
                    />
                <androidx.constraintlayout.widget.Guideline
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.55"
                    android:id="@+id/glClear"
                    />
                <com.google.android.material.button.MaterialButton
                    android:layout_width="0dp"
                    android:padding="5dp"
                    android:layout_height="0dp"
                    android:id="@+id/mbtnClear"
                    app:layout_constraintWidth_percent="0.3"
                    app:layout_constraintDimensionRatio="1:0.5"
                    app:layout_constraintTop_toBottomOf="@+id/vTopEveryWhere1"
                    app:layout_constraintStart_toEndOf="@+id/glClear"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/white"
                    android:text="@string/clear"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintWidth_percent="0.09"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/mbtnClear"

                    />
        </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>