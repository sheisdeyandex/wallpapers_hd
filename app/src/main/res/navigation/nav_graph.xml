<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/mainFragment"
    android:id="@+id/nav_graph">
    <fragment android:id="@+id/mainFragment"
        tools:layout="@layout/fragment_main"
        android:name="com.ivan.wallpapers.ui.fragments.main.view.MainFragment"
        >
        <action
            android:id="@+id/action_mainFragment_to_fullScreenWallpaper"
            app:popExitAnim="@anim/exit_anim"
            app:destination="@id/fullScreenWallpaper" />
        <action
            android:id="@+id/action_mainFragment_to_removeAdsFragment"
            app:destination="@id/removeAdsFragment" />
        <action
            android:id="@+id/action_mainFragment_to_noInternetFragment"
            app:destination="@id/noInternetFragment" />
        <action
            android:id="@+id/action_mainFragment_to_languagesFragment"
            app:destination="@id/languagesFragment" />
        <action
            android:id="@+id/action_mainFragment_to_dialogCache"
            app:destination="@id/dialogCache" />
    </fragment>
    <fragment android:id="@+id/fullScreenWallpaper"
        tools:layout="@layout/fragment_full_screen_wallpaper"
        android:name="com.ivan.wallpapers.ui.fragments.fullscreenwallpaper.view.FullScreenWallpaper"
        >
        <action
            android:id="@+id/action_fullScreenWallpaper_to_dialogInstall"
            app:destination="@id/dialogInstall" />
    </fragment>
    <fragment android:id="@+id/removeAdsFragment"
        tools:layout="@layout/fragment_remove_ads"
        android:name="com.ivan.wallpapers.ui.fragments.settings.removeads.RemoveAdsFragment"
        >
        <action
            android:id="@+id/action_removeAdsFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
    <dialog android:id="@+id/dialogInstall"
        android:name="com.ivan.wallpapers.ui.fragments.fullscreenwallpaper.view.DialogInstall"
        tools:layout="@layout/dialog_install"/>
    <dialog android:id="@+id/dialogCache"
        android:name="com.ivan.wallpapers.ui.fragments.settings.cache.DialogLoading"
        tools:layout="@layout/dialog_load_wallpaper"/>
    <fragment android:id="@+id/noInternetFragment"
        android:name="com.ivan.wallpapers.ui.fragments.nointernet.NoInternetFragment"
        tools:layout="@layout/fragment_no_internet">
        <action
            android:id="@+id/action_noInternetFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:popUpToInclusive="true"
            />
    </fragment>
    <fragment android:id="@+id/languagesFragment"
        android:name="com.ivan.wallpapers.ui.fragments.settings.language.LanguageFragment"
        tools:layout="@layout/fragment_language">

    </fragment>
</navigation>